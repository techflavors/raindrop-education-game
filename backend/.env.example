# ===========================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# ===========================================
# Use these settings when deploying to Render
# Copy this file to .env and fill in your values

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/raindrop-battle?retryWrites=true&w=majority

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend URL for CORS (your Vercel URL)
FRONTEND_URL=https://your-app.vercel.app

# Legacy - also supports CLIENT_URL
CLIENT_URL=https://your-app.vercel.app

# JWT Configuration (IMPORTANT: Change this to a random 32+ character string!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters-long
JWT_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===========================================
# LOCAL DEVELOPMENT CONFIGURATION
# ===========================================
# Use these settings for local development:
#
# MONGODB_URI=mongodb://localhost:27017/raindrop-battle
# PORT=3000
# NODE_ENV=development
# FRONTEND_URL=http://localhost:3001
# CLIENT_URL=http://localhost:3001
# JWT_SECRET=your-local-development-secret-key
# JWT_EXPIRE=7d
